<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/carpool.css">
    <link rel="stylesheet" href="/css/main.css">
    <link href="/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>
<body class="d-flex justify-content-center align-items-center">
    <div class="container border shadow glassmorphism py-4 px-4">
        <div class="row">
            <div class="col-6 float-start">
                <h1>Welcome, <%= user.username %></h1>
            </div>
            <% if (user.carMembers.length == 0) { %>
                <div class="col-6">
                    <form action="/newCarpool" method="POST">
                        <button name="username" value=<%= user.username %> class="carpool-button float-end">Make a new carpool!</button>
                    </form>
                </div>
            <% } %>
        </div>
        <% if (user.carMembers.length != 0) { %>
            <hr>
            <h3>Your Carpool!</h3>
            <% user.carMembers.forEach(function(member){ %>
                <p> <%= member.username %> </p>
            <% }); %>
        <% } %>
        <hr>
        <h3>Available Carpools</h3>
        <% allUsers.forEach(function(singleUser){ %>
            <% if (singleUser.carMembers.length != 0) { %>
                <div class="card">
                    <div class="card-body">
                    <% user.carMembers.forEach(function(carMember){ %>
                        <%= carMember %>
                    <% }); %>
                </div>
            </div>
            <% } %>
        <% }); %>
    </div>
</body>
</html>